/* pages/sdk/index.wxss */
.toolbar{
    font-size: 12px;
    background:#333;
    color:#fff;
    position:relative;
    z-index:100;
}
.send-btn{
    float: right;
    margin-top: -50rpx;
    padding: 5px;
}

.sent-box{
    border-top: 1px solid gray;
    position:fixed;
    bottom:0;
    left:0;
    width:100%;
    height:5em;
}
.sent-box textarea{
    border:1px solid #dedede;
    height:3em;
    width:100%;
    padding:10px;
    font-size:12px;
    line-height:20px;
}

.mesage-list{
    font-size: 13px;
    min-height: 800rpx;
    width:100%;
    position:fixed;
    left:0;
    bottom:10em;
}
.avater{
    height: 20px;
    width: 20px;
    float: left;
}
.usermotto {
  width: 65rpx;
  height: 69rpx;
  border-radius: 50%;
  margin-left: 3px;
}
.message{
    position:relative;
    width:180px;
    height:20px;
    padding-top: 6px;
    padding-bottom:8px;
    background:#F8C301;
    border-radius:5px; 
    margin:15px 0px auto 50px;
}
.message .arrow {
    position:absolute;
    top:5px;
    left:-16px; 
    width:0;
    height:0;
    font-size:0;
    border:solid 8px;
    border-color: white #F8C301 white white;
}

.sender-user{
    margin-left: 170px;
    font-size: 11px;
}